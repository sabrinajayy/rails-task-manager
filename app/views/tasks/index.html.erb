<h1>Your Tasks</h1>

<%= link_to "Add a Task", 'tasks/new', class: 'btn' %>

<ul>
<% @tasks.each do |task| %>
  <li class='task'><%= task.name %> <%= link_to "View", task_path(task) %> <%= link_to "Edit", edit_task_path(task) %> <%= link_to "Delete", task_path(task), class: 'delete',
      method: :delete,
      data: { confirm: "Are you sure?" } %>
        <p class='notes'><%= task.notes %></p>
      </li>

<% end %>
</ul>


